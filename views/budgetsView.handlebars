<div class="container">
	<div class = "row">
		<div class = "col-md-10">

			<h1>Money Management Helper</h1>

			<div class = "row">
				<img class = "img-large" src="/assets/img/bank.jpg" alt="image not available">
			</div>
			<div class="row">
				<h2>View Budget Items</h2>
			</div>
		</div>
	

	</div>

	<div class="row">
	    <form method="GET" action="/budgets/view/list?_method=GET" class="button">
{{!-- 	    <form id="budgetView">
 --}}
		    <div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>Start date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="start_date" id="start_date" required>
				</div>
			</div>
		    <div class="row spacer">
		    </div>
			<div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>End date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="end_date" id="end_date" required>
				</div>
			</div>


			<div class="row">
				<div class="col-md-10">
					<center><button class="button" type="submit">Submit</button></center>
				</div>

			</div>
	    </form>
	<div>

	<div class="row">
	    <div class="col-md-10">

	    	<h4>Budget List</h4>
	    </div>
		<div class="row">
			{{#each Budgets}}
	    	<div class="col-md-9 col-md-offset-1" id="budget-list">
				<form method="POST" action="/budgets/update?_method=PUT" class="button">
					<div class="col-md-2">
						<input input type="hidden" name="budget_id" value={{this.id}}>
						<label for="amt_budgeted">{{this.description}}</label>
					</div>
					<div class="col-md-3">
						<input input type="text" name="amt_budgeted" value={{this.amt_budgeted}}>
					</div>
					<div class="col-md-2">
						<button type="submit" class="btn btn-sm">Update</button>
					</div>

				</form>

	    	</div>
	    	{{/each}}
	    </div>

	</div>

</div>

