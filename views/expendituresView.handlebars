<div class="container">
	<div class = "row">
		<div class = "col-md-10">

			<h1>Money Management Helper</h1>

			<div class = "row">
				<img class = "img-large" src="/assets/img/bank.jpg" alt="image not available">
			</div>
			<div class="row">
				<h2>View Expenditures</h2>
			</div>
		</div>
	

	</div>

	<div class="row">
	    
	    <form method="GET" action="/expenditures/view/list?_method=GET" class="button">
{{!-- 	    <form id="budgetView">
 --}}
		    <div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>Start date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="start_date" id="start_date" required>
				</div>
			</div>
		    <div class="row spacer">
		    </div>
			<div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>End date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="end_date" id="end_date" required>
				</div>
			</div>


			<div class="row">
				<div class="col-md-10">
					<center><button class="button" type="submit">Submit</button></center>
				</div>

			</div>
	    </form>
	<div>

	<div class="row">
	    <div class="col-md-10">

	    	<h4>Expenditure List</h4>
	    </div>
	</div>
    <div class="row spacer">
    </div>
	    <div class="row">
	    	<div class="col-md-2"><strong>Category</strong></div>
	    	<div class="col-md-2"><strong>Amount</strong></div>
	    	<div class="col-md-2"><strong>Date Spent</strong></div>
	    	<div class="col-md-3"><strong>Comments</strong></div>
	    	<!-- <div class="col-md-2"><center></center></div> -->

	    </div>
		<div class="row">
			{{#each Expenditures}}
	    	<div class="col-md-12" id="expenditures-list">
				<form method="POST" action="/expenditures/update?_method=PUT" class="button">
					<div class="col-md-2">
						<input type="hidden" name="expenditure_id" value={{this.id}}>
						<label for="amt_spent">{{this.description}}</label>
					</div>
					<div class="col-md-2">
						<input  type="number" name="amt_spent" style="width: 100px" value={{this.amt_spent}}>
					</div>
					<div class="col-md-2">
						<input  type="date" name="date_spent" value={{this.date_spent}}>
					</div>
					<div class="col-md-3">
						<input  type="text" name="comments" style="min-width: 250px"value="{{this.comments}}">
					</div>
					<div class="col-md-2">
						<button type="submit" class="btn btn-sm">Update</button>
					</div>

				</form>

	    	</div>
	    	{{/each}}
	    </div>

	</div>

</div>

