<div class="container">
	<div class = "row">
		<div class = "col-md-10">

			<h1>Money Management Helper</h1>

			<div class = "row">
				<img class = "img-large" src="/assets/img/bank.jpg" alt="image not available">
			</div>
			<div class="row">
				<h2>View Expenditures</h2>
			</div>
		</div>
	

	</div>

	<div class="row">
	    
	    <form method="GET" action="/expenditures/view/list?_method=GET" class="button">
{{!-- 	    <form id="budgetView">
 --}}
		    <div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>Start date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="start_date" id="start_date" required>
				</div>
			</div>
		    <div class="row spacer">
		    </div>
			<div class="row">
				<div class="col-md-2 col-md-offset-1">
					<strong>End date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="end_date" id="end_date" required>
				</div>
			</div>


			<div class="row">
				<div class="col-md-10">
					<center><button class="button" type="submit">Submit</button></center>
				</div>

			</div>
	    </form>
	<div>

	<div class="row">
	    <div class="col-md-10">

	    	<h4>Expenditure List</h4>
	    </div>
		<div class="row">
			{{#each Expenditures}}
	    	<div class="col-md-9 col-md-offset-3" id="expenditures-list">
				<form method="POST" action="/expenditures/update?_method=PUT" class="button">
					<input input type="hidden" name="expenditure_id" value={{this.id}}>
					<!-- <label for="amt_budgeted">{{this.description}}:</label> -->
					<label for="amt_budgeted">Category: {{this.description}}</label>
					<input input type="text" name="amt_spent" value={{this.amt_spent}}>
					<button type="submit" class="btn btn-default">Update</button>

				</form>

	    	</div>
	    	{{/each}}
	    </div>

	</div>

</div>

