<div class="container">
	<div class = "row">
		<div class = "col-md-10">

			<h1>Money Management Helper</h1>

			<div class = "row">
				<img class = "img-large" src="/assets/img/bank.jpg" alt="image not available">
			</div>
			<div class="row">
				<h2>Budgets</h2>
			</div>
		</div>
	

	</div>

	<div class="row">
	    <form action="/" method="POST">
		    <div class="row">
		        <div class="col-md-2 col-md-offset-1">
					<strong> Select category: </strong><br><br>
		        </div>
		        <div class="col-md-2">

					<select name="category" style="min-width: 180px" required>
							
						{{#each category}}
							<option value = "{{cat_id}}">{{description}}</option>
						{{/each}}

					</select>
				</div>
				<div class="col-md-2" class="indent1">
					<strong>Start date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="start_date" required>
				</div>
		    </div>
		    <div class="row">
		        <div class="col-md-2 col-md-offset-1">
					<strong> Enter budgeted amount: </strong><br><br>
		        </div>
		        <div class="col-md-2">
		        	<input type="text" name="amt_budgeted" required>

				</div>
				<div class="col-md-2" class="indent1">
					<strong>End date:</strong>

				</div>
				<div class="col-md-2">
					<input type="date" name="end_date" required>
				</div>
		    </div>
			<div class="row">
				<div class="col-md-10">
					<center><button class="button" type="submit">Submit</button></center>
				</div>

			</div>
	    </form>
	<div>

	<div class="row">
	    <div class="col-md-10" id="budget-list">

	    	<h4>Budget List</h4>

	    </div>

	</div>

</div>

