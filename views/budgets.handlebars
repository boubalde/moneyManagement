<div class="container">
	<div class = "row">
		<div class = "col-md-10">

			<h1>Money Management Helper</h1>

			<div class = "row">
				<img class = "img-large" src="/assets/img/bank.jpg" alt="image not available">
			</div>
			<div class="row">
				<h2>Budgets</h2>
			</div>
		</div>
	

	</div>

	<div class="row">
	    <form method="POST" action="/budgets/create?_method=POST" class="button">
		    <div class="row">
		        <div class="col-md-2 col-md-offset-1">
					<strong> Select category: </strong><br><br>
		        </div>
		        <div class="col-md-2">

					<select name="category_id" style="min-width: 180px" required>
						<option selected="selected" disabled="disabled">Choose option</option>
							
						{{#each category}}
							<option value = "{{this.id}}">{{description}}</option>
						{{/each}}

					</select>
				</div>
				<div class="col-md-2" class="indent1">
					<strong>Start date:</strong>
				</div>
				<div class="col-md-2">
					<input type="date" name="start_date" required>
				</div>
		    </div>
		    <div class="row">
		        <div class="col-md-2 col-md-offset-1">
					<strong> Enter budgeted amount: </strong><br><br>
		        </div>
		        <div class="col-md-2">
		        	<input type="text" name="amt_budgeted" required>

				</div>
				<div class="col-md-2" class="indent1">
					<strong>End date:</strong>

				</div>
				<div class="col-md-2">
					<input type="date" name="end_date" required>
				</div>
		    </div>
			<div class="row">
				<div class="col-md-10">
					<center><button class="button" type="submit">Submit</button></center>
				</div>

			</div>
	    </form>
	<div>

	<div class="row">
	    <div class="col-md-10">

	    	<h4>Budget List</h4>
	    </div>
		<div class="row">
			{{#each Budgets}}
	    	<div class="col-md-9 col-md-offset-3" id="budget-list">
				<form method="POST" action="/budgets/update?_method=PUT" class="button">
					<input input type="hidden" type="text" name="budget_id" value={{this.budget_id}}>
					<!-- <label for="amt_budgeted">{{this.description}}:</label> -->
					<label for="amt_budgeted">Category:</label>
					<input input type="text" name="amt_budgeted" value={{this.amt_budgeted}}>
					<button type="submit" class="btn btn-default">Update</button>

				</form>

	    	</div>
	    	{{/each}}
	    </div>

	</div>

</div>

